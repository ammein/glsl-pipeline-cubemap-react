{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es2019",
            "dom"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": false,
        "jsx": "react",
        "pretty": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "removeComments": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "baseUrl": "./package/src"
    },
    "include": [
        "package/src/**/*",
        "package/src/dist/**/*",
        "package/test/**/*",
        "package.json"
    ],
    "exclude": [
        "./node_modules/**/*",
        "dist",
        "**/*.test.ts"
    ]
}