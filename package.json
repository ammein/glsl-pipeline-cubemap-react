{
  "name": "glsl-pipeline-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Prototype complex pipelines directly from a single shader by branching it into stages.",
  "main": "index.js",
  "license": "MIT",
  "author": "Patricio Gonzalez Vivo <patriciogonzalezvivo@gmail.com>",
  "scripts": {
    "build": "preconstruct build",
    "dev": "preconstruct dev && yarn workspace waves dev",
    "postinstall": "preconstruct dev && manypkg check",
    "ci": "preconstruct validate && manypkg check && yarn build",
    "release": "chmod +x ./scripts/release.sh && ./scripts/release.sh",
    "clean": "rm -rf node_modules package/dist examples/*/node_modules",
    "update": "./scripts/updateAll.sh"
  },
  "workspaces": {
    "packages": [
      "package",
      "examples/*"
    ]
  },
  "preconstruct": {
    "packages": [
      "package"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:patriciogonzalezvivo/glsl-pipeline.git"
  },
  "homepage": "https://github.com/patriciogonzalezvivo/glsl-pipeline",
  "bugs": {
    "url": "https://github.com/patriciogonzalezvivo/glsl-pipeline/issues"
  },
  "keywords": [
    "glsl",
    "pipeline",
    "webgl",
    "threejs",
    "three",
    "buffer",
    "ping",
    "pong",
    "glslViewer"
  ],
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "@manypkg/cli": "^0.21.0",
    "@preconstruct/cli": "^2.8.1"
  }
}
